      =fa_icon 'camera'
%div.wrapper
  %footer.footer-main
    %div.fBgi
      %div.fBgi__content
        %p.subComment スマホでかんたんフリマアプリ
        %p.mainComment 今すぐ無料ダウンロード！
        %div.fImage
          =image_tag "logo_red.svg", size: "50x50", alt: "logo", class: "fImage__logo"
          = link_to image_tag("app-store.svg", width: '100', alt: "app", class:"fImage__app"), "#"
          = link_to image_tag("googleplay.png", width: '110', alt: "app", class: "fImage__google"), "#"
      =image_tag "smartphone.png", size: "300x263", alt: "smartphone"
    %div.fMain
      %div.fMain__fAbout
        %h2.footer-h2 メルカリについて
        %ul.fMain__fAbout--menu
          %li.footer-li  
            = link_to "会社概要（運営会社）","#",class: "footer-a"
          %li.footer-li   
            = link_to "採用情報","#",class: "footer-a" 
          %li.footer-li   
            = link_to "プレスリリース","#",class: "footer-a" 
          %li.footer-li   
            = link_to "公式ブログ","#", class: "footer-a"
          %li.footer-li    
            = link_to "メルカリロゴ利用ガイドライン","#",class: "footer-a"
        %div.fMain__fAbout--icon
          =fa_icon 'twitter'
          =fa_icon 'facebook-square'
      %div.fHelp
        %h2.footer-h2 ヘルプ＆ガイド
        %ul
          %li.footer-li    
            = link_to "メルカリガイド","#",class: "footer-a"
          %li.footer-li
            = link_to "らくらくメルカリ便","#",class: "footer-a"
          %li.footer-li  
            = link_to "ゆうゆうメルカリ便","#",class: "footer-a"  
          %li.footer-li    
            = link_to "大型メルカリ便","#",class: "footer-a"
          %li.footer-li    
            = link_to "車体取引ガイド","#",class: "footer-a"
          %li.footer-li
            = link_to "メルカリあんしん・安全宣言！","#",class: "footer-a"    
          %li.footer-li
            = link_to "偽ブランド品撲滅への取り組み","#", class: "footer-a"    
          %li.footer-li
            = link_to "メルカリボックス","#", class: "footer-a"    
      %div.fPrivacy
        %h2.fPrivacy__rule プライバシーと利用規約
        %div.fPrivacy__rule--lists
          %ul
            %li.footer-li  
              = link_to "プライバシーポリシー","#",class: "footer-a"  
            %li.footer-li
              = link_to "メルカリ利用規約","#",class: "footer-a"    
            %li.footer-li    
